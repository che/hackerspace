-# encoding: utf-8
!!!
%html{:xmlns => 'http://www.w3.org/1999/xhtml', :lang => @locale, 'xml:lang' => @locale}
 %head
  %title #{HACKERSPACE::CONFIGURATION[:locales][@locale][:title]}
  %meta{'http-equiv' => 'content-type', :content => "text/html; charset=#{HACKERSPACE::ENCODING_DEFAULT}"}
  %meta{'http-equiv' => 'content-language', :content => @locale}
  %meta{:name => 'description', :content => HACKERSPACE::CONFIGURATION[:locales][@locale][:description]}
  %meta{:name => 'keywords', :content => HACKERSPACE::CONFIGURATION[:locales][@locale][:keywords]}
  %link{:rel => 'shortcut icon', :type => 'image/x-icon', :href => "/images/#{HACKERSPACE::NAME}.ico"}
  %link{:rel => 'stylesheet', :href => '/stylesheets/layout.css', :media => 'all', :type => 'text/css'}
 %body
  %div#p_logo
   %a.logo{:href => HACKERSPACE::SEPARATOR + @locale}
  %div#p_txt
   - for i in HACKERSPACE::CONFIGURATION[:locales][@locale][:logo][:text].keys.sort
    %a.txt #{HACKERSPACE::CONFIGURATION[:locales][@locale][:logo][:text][i]}
  %div#p_lang
   - if HACKERSPACE::CONFIGURATION[:locale][:list].size > 1
    - for i in HACKERSPACE::CONFIGURATION[:locale][:list]
     - if i == @locale
      %a.simple #{HACKERSPACE::CONFIGURATION[:locales][i][:name]}
     - else
      %a.link{:href => HACKERSPACE::SEPARATOR + i + @path}#{HACKERSPACE::CONFIGURATION[:locales][i][:name]}
  %div#p_head
   %div#p_menu
    %div#menu
     %a.menu{:href => HACKERSPACE::SEPARATOR + @locale}#{HACKERSPACE::CONFIGURATION[:locales][@locale][:menu][0]}
     %a.menu{:href => "http://wiki#{HACKERSPACE::CHAR_DOT + HACKERSPACE::CONFIGURATION[:domain]}"}#{HACKERSPACE::CONFIGURATION[:locales][@locale][:menu][1]}
     %a.menu{:href => 'http://groups.google.com/group/hackerspace-minsk'}#{HACKERSPACE::CONFIGURATION[:locales][@locale][:menu][2]}
     %a.menu{:href => HACKERSPACE::SEPARATOR + @locale + HACKERSPACE::Site::PATH_ABOUT}#{HACKERSPACE::CONFIGURATION[:locales][@locale][:menu][3]}
     %a.menu{:href => HACKERSPACE::SEPARATOR + @locale + HACKERSPACE::Site::PATH_CONTACTS}#{HACKERSPACE::CONFIGURATION[:locales][@locale][:menu][4]}
  %div#p_data
   %div#data
    %div#p_title
     %a.title #{@title}
    - for i in HACKERSPACE::CONFIGURATION[:locales][@locale][:head][:p].keys.sort
     %p #{HACKERSPACE::CONFIGURATION[:locales][@locale][:head][:p][i]}
  %div#p_cprt
   %a.c &copy; #{((HACKERSPACE::CONFIGURATION[:foundation_year] == Time.now.year)?(HACKERSPACE::CHAR_EMPTY):(HACKERSPACE::FOUNDATION_YEAR_STR))}#{Time.now.year} #{HACKERSPACE::CONFIGURATION[:locales][@locale][:vendor]}.
- remove_instance_variable(:@locale)
- remove_instance_variable(:@title)
- remove_instance_variable(:@path)